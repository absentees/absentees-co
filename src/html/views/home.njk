{% extends "master.njk" %}
{% block content %}


<div class="grid-container">
	<div class="header">
		{{ settings.description | safe }}
		{{ settings.links | safe }}
	</div>
	<div class="projects">
		{% for project in projects %}
		<div id="{{project.id}}"  class="project">
			<div class="name">
				<h3>{{ project.title }}</h3>
			</div>
            <div class="expand-container"><button class="expand" data-project="{{ project.id }}">Expand</button></div>
			<div class="description">{{ project.description | safe }}
			</div>
			<div class="screenshots">{% if project.screenshots %}
				{% for screenshot in project.screenshots %}
				<div class="screenshot">
                    <img src="{{screenshot}}" alt="{{project.title}} screenshot">
                </div>
				{% endfor%}
				{% endif %}</div>
		</div>
		{% endfor %}
	</div>
	<div class="footer">

	</div>

</div>


{% endblock %}
